@{
    ViewData["Title"] = "Home Page";
    var items = (List<SelectListItem>)ViewBag.items;
    var items2 = (List<SelectListItem>)ViewBag.items2;
    var items3 = (List<SelectListItem>)ViewBag.items3;
}
<div class="text-center">
    <h1 class="display-4">Bienvenido al portal de Ventas BCP</h1>
</div>
<div>
    <h2><center>Agregar Ventas</center></h2>

   @*@if (items != null)*@
    @*{*@
        @using (Html.BeginForm())
        {
        <form>
          <div class="form-group">
            <label for="InputPeriodo">Periodo</label>
            <input class="form-control" type="date" name="periodo" id="periodo">
           </div>
          <div class="form-group">
            <label for="InputAsesor">Asesor</label>
            @Html.DropDownList("IdAsesor",items,"Seleccionar",new{@class="form-control"})
          </div>
          <div class="form-group">
                <label for="InputCliente">Cliente</label>
            @Html.DropDownList("IdCliente",items2,"Seleccionar",new{@class="form-control"})
          </div>
          <div class="form-group">
                <label for="InputProducto">Producto</label>
            @Html.DropDownList("IdProducto",items3,"Seleccionar",new{@class="form-control"})
          </div>
          <div class="form-group">
           <label for="InputMonto">Monto</label>
           <input class="form-control" type="number" id="monto" name="monto" />
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        }
    @*}*@

</div>
<script>
    $(function () {
        $('#datepicker').datepicker();
    });
</script>
